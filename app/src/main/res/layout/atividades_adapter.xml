<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/calendar_active_month_bg"
    android:gravity="center|start"
    android:orientation="horizontal"
    tools:visibility="visible">


    <ImageView
        android:id="@+id/AtividadeFoto"
        android:layout_width="110dp"
        android:layout_height="71dp"
        android:layout_weight="1"
        android:background="@color/calendar_divider"
        app:srcCompat="@mipmap/ic_launcher"
        tools:srcCompat="@android:drawable/sym_def_app_icon" />

    <LinearLayout
        android:layout_width="280dp"

        android:layout_height="71dp"
        android:background="@color/calendar_divider"
        android:orientation="vertical">

        <TextView
            android:id="@+id/editTextNomeAtividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/editTextDescricaoAtividade"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:gravity="left"
            android:text="Alguma Coisa"
            android:textAlignment="center"
            android:textSize="12sp" />


    </LinearLayout>

</LinearLayout>